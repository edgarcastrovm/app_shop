<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Productos</title>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/header') %>
    
    <div class="content container mt-5">
        <h2 class="mb-4">Lista de Productos</h2>
        
        <div class="row">
            <% productos.forEach(producto => { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title"><%= producto.proNombre %></h5>
                            <p class="card-text"><%= producto.proDescripcion %></p>
                            <p class="text-muted">Precio: $<%= producto.proPrecio %></p>
                            <p class="text-muted">Stock: <%= producto.proStock %></p>
                        </div>
                        <div class="card-footer">
                            <form action="/carrito/agregar" method="POST">
                                <input type="hidden" name="proId" value="<%= producto.id %>">
                                
                                <label for="catidad" class="form-label">Cantidad:</label>
                                <input type="number" id="pro_catidad" name="catidad" value="1" min="1" max="<%= producto.proStock %>" class="form-control mb-2" required>
                                <button type="submit" class="btn btn-primary btn-sm">Agregar al carrito</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
    <style>
        #pro_catidad {
            width: 60px;
            display: inline-block;
        }
    </style>

    <%- include('../partials/footer') %>
</body>
</html>